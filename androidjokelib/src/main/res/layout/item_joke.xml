<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@drawable/bg_with_border"
    android:padding="16dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tv_joke_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="#DEDEDE"
        android:textSize="24sp"
        tools:text="The Big Lebowsky" />

    <TextView
        android:id="@+id/tv_joke_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="#DEDEDE"
        android:textSize="24sp"
        tools:text="I am not Mr. Lebowsky, you are. I am his dudeness" />

    <TextView
        android:id="@+id/tv_joke_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="#DEDEDE"
        android:textSize="24sp"
        android:visibility="gone"
        tools:text="chaching" />


</LinearLayout>